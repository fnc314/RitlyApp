<div class="table-responsive">

	<table class="table table-hover">

		<tr><th>The List of Generated Links!</th></tr>

		<tr>
			<th>No.</th>
			<th>Website URL</th>
			<th>Random String</th>
			<th>DELETE</th>
		</tr>

		<%= @links.each do |x| %>
			<tr>
				<td><%= x[:id] %></td>
				<td><%= x[:url] %></td>
				<td><%= x[:random_string] %></td>
				<td><%= link_to "DELETE", "/links/#{x[:random_string]}", :method => :delete %></td>
			</tr>
		<% end %>

		<tr>
			<td><a href="/go">GO</a></td>
			<td></td>
			<td></td>
			<td><%= link_to "Make A New Entry!", "/links/new", :method => :get %></td>
		</tr>

	</table>

</div>